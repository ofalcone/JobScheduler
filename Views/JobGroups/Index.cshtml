@model IEnumerable<JobScheduler.Models.JobGroup>

@{
    ViewData["Title"] = nameof(JobGroup);
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Job)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Group)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Job.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Group.Desc)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.JobId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.JobId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.JobId })
                </td>
            </tr>
        }
    </tbody>
</table>
